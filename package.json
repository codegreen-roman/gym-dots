{
    "name": "gym-dots",
    "version": "0.0.1",
    "description": "Gym log app",
    "main": "index.js",
    "repository": "git@gitlab.com:neoroma/gym-dots.git",
    "author": "Roman Shestakov <neoroma@gmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "webpack",
        "dev": "webpack-dev-server",
        "lint-fix": "node_modules/.bin/eslint --fix js/**/*.js",
        "lint": "node_modules/.bin/eslint js/**/*.js webpack.config.js",
        "watch": "npm run build -- --watch",
        "server": "nodemon --watch server --exec babel-node -- server/index.js",
        "data:mockapi": "json-server data/data.json",
        "dev:server": "npm-run-all --parallel dev data:mockapi",
        "flow": "flow",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "dependencies": {
        "babel-plugin-transform-class-properties": "^6.24.1",
        "express": "^4.15.3",
        "faker": "^4.1.0",
        "firebase": "^4.1.3",
        "glamor": "^3.0.0-3",
        "glamorous": "^3.23.5",
        "moment": "^2.18.1",
        "prop-types": "^15.5.10",
        "ramda": "^0.24.1",
        "react": "^15.6.1",
        "react-dom": "^15.6.1",
        "react-redux": "^5.0.5",
        "react-redux-i18n": "^1.8.0",
        "react-router": "^4.1.2",
        "react-router-dom": "^4.1.2",
        "redux": "^3.7.2",
        "redux-logger": "^3.0.6",
        "redux-thunk": "^2.2.0",
        "styletron": "^2.5.7",
        "styletron-react": "^2.5.8",
        "styletron-utils": "^2.5.4",
        "toastr": "^2.1.2"
    },
    "devDependencies": {
        "babel-cli": "^6.24.1",
        "babel-core": "^6.25.0",
        "babel-eslint": "^7.2.3",
        "babel-jest": "^20.0.3",
        "babel-loader": "^7.1.1",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-es2017": "^6.24.1",
        "babel-preset-flow": "^6.23.0",
        "babel-preset-react": "^6.24.1",
        "colors": "^1.1.2",
        "css-loader": "^0.28.4",
        "enzyme": "^2.9.1",
        "enzyme-to-json": "^1.5.1",
        "eslint": "^4.2.0",
        "eslint-config-standard-react": "^5.0.0",
        "eslint-loader": "^1.9.0",
        "eslint-plugin-flowtype": "^2.35.0",
        "eslint-plugin-jest": "^20.0.3",
        "eslint-plugin-react": "^7.1.0",
        "extract-text-webpack-plugin": "^3.0.0",
        "flow-bin": "^0.50.0",
        "jest": "^20.0.4",
        "jest-glamor-react": "^1.4.0",
        "json-loader": "^0.5.4",
        "json-server": "^0.11.2",
        "node-sass": "^4.5.3",
        "nodemon": "^1.11.0",
        "npm-run-all": "^4.0.2",
        "react-addons-test-utils": "^15.6.0",
        "redux-mock-store": "^1.2.3",
        "sass-loader": "^6.0.6",
        "style-loader": "^0.18.2",
        "webpack": "^3.3.0",
        "webpack-dev-server": "^2.5.1"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "testMatch": [
            "<rootDir>/js/**/*.spec.js"
        ],
        "setupTestFrameworkScriptFile": "<rootDir>/test-setup/setup.js",
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        },
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ]
    }
}
