{
    "name": "gym-dots",
    "version": "0.0.1",
    "description": "Gym log app",
    "main": "index.js",
    "repository": "git@gitlab.com:neoroma/gym-dots.git",
    "author": "Roman Shestakov <neoroma@gmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "webpack",
        "build:production": "NODE_ENV=production webpack --optimize-minimize",
        "dev": "webpack-dev-server",
        "lint-fix": "node_modules/.bin/eslint --fix js/**/*.js",
        "lint": "node_modules/.bin/eslint js/**/*.js webpack.config.js",
        "watch": "npm run build -- --watch",
        "server": "nodemon --watch server --exec babel-node -- server/index.js",
        "babel-node": "babel-node",
        "babel-nodemon": "nodemon --exec npm run babel-node -- server/index.js",
        "data:mockapi": "json-server data/data.json",
        "dev:server": "npm-run-all --parallel dev",
        "flow": "flow",
        "pretest": "NODE_ENV=test",
        "test": "NODE_PATH=./js/state/ jest --env=jsdom",
        "test:watch": "NODE_ENV=test NODE_PATH=./js/state/ jest --watch --env=jsdom",
        "test:coverage": "NODE_ENV=test NODE_PATH=./js/state/ yarn run size-limit && jest --coverage --env=jsdom",
        "pretranspile-all-js": "rimraf js-dist",
        "transpile-all-js": "babel js --out-dir js-dist --presets=es2015,react --plugins=emotion",
        "prepackage-functions": "yarn run transpile-all-js && rimraf functions",
        "package-functions": "babel 'cloud-functions-src' --out-dir 'functions' --presets=es2015,react --copy-files --ignore 'node_modules'",
        "postpackage-functions": "cd functions && yarn",
        "predeploy-hosting": "yarn run build:production",
        "deploy-hosting": "firebase deploy --only hosting",
        "deploy": "yarn run package-functions && firebase deploy",
        "deploy-functions": "yarn run package-functions && firebase deploy --only functions",
        "serve-functions-local": "yarn run package-functions && firebase serve --only functions"
    },
    "dependencies": {
        "express": "^4.15.3",
        "firebase": "^4.1.3",
        "glamor": "^3.0.0-3",
        "glamorous": "^3.23.5",
        "glamorous-jsxstyle": "^2.0.0",
        "google-fonts-webpack-plugin": "^0.4.3",
        "history": "^4.7.2",
        "moment": "^2.18.1",
        "normalize.css": "^7.0.0",
        "nosleep.js": "^0.7.0",
        "prop-types": "^15.5.10",
        "ramda": "^0.24.1",
        "react": "^15.6.1",
        "react-dom": "^15.6.1",
        "react-redux": "^5.0.5",
        "react-redux-i18n": "^1.8.0",
        "react-router": "^4.1.2",
        "react-router-dom": "^4.1.2",
        "react-router-redux": "^5.0.0-alpha.6",
        "redux": "^3.7.2",
        "redux-logger": "^3.0.6",
        "redux-thunk": "^2.2.0",
        "reselect": "^3.0.1",
        "rxjs": "^5.4.2",
        "toastr": "^2.1.2"
    },
    "devDependencies": {
        "babel-cli": "^6.24.1",
        "babel-core": "^6.25.0",
        "babel-eslint": "^7.2.3",
        "babel-jest": "^20.0.3",
        "babel-loader": "^7.1.1",
        "babel-plugin-transform-async-to-generator": "^6.24.1",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-object-rest-spread": "^6.23.0",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.6.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-es2017": "^6.24.1",
        "babel-preset-flow": "^6.23.0",
        "babel-preset-react": "^6.24.1",
        "clean-webpack-plugin": "^0.1.16",
        "colors": "^1.1.2",
        "compression": "^1.7.0",
        "cors": "^2.8.4",
        "css-loader": "^0.28.4",
        "emotion": "^7.0.12",
        "enzyme": "^2.9.1",
        "enzyme-to-json": "^1.5.1",
        "eslint": "^4.2.0",
        "eslint-config-standard-react": "^5.0.0",
        "eslint-loader": "^1.9.0",
        "eslint-plugin-flowtype": "^2.35.0",
        "eslint-plugin-jest": "^20.0.3",
        "eslint-plugin-react": "^7.1.0",
        "extract-text-webpack-plugin": "^3.0.0",
        "firebase-functions": "^0.6.3",
        "flow-bin": "^0.53.1",
        "html-webpack-plugin": "^2.30.1",
        "jest": "^20.0.4",
        "jest-glamor-react": "^1.4.0",
        "json-loader": "^0.5.4",
        "json-server": "^0.12.0",
        "node-sass": "^4.5.3",
        "nodemon": "^1.11.0",
        "npm-run-all": "^4.0.2",
        "prettier-eslint": "^6.4.2",
        "react-addons-perf": "^15.4.2",
        "react-addons-test-utils": "^15.6.0",
        "react-error-overlay": "^1.0.9",
        "react-test-renderer": "^15.6.1",
        "redux-mock-store": "^1.2.3",
        "rimraf": "^2.6.2",
        "sass-loader": "^6.0.6",
        "size-limit": "^0.11.4",
        "style-loader": "^0.18.2",
        "webpack": "^3.3.0",
        "webpack-bundle-analyzer": "^2.8.3",
        "webpack-dev-server": "^2.5.1"
    },
    "size-limit": [
        {
            "path": "./build/*.js",
            "webpack": false,
            "limit": "500 KB"
        }
    ],
    "jest": {
        "testEnvironment": "jsdom",
        "testMatch": [
            "<rootDir>/js/**/*.spec.js"
        ],
        "setupTestFrameworkScriptFile": "<rootDir>/test-setup/setup.js",
        "moduleNameMapper": {
            "^@components(.*)$": "<rootDir>/js/components$1",
            "^@utils(.*)$": "<rootDir>/js/utils$1"
        },
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        },
        "collectCoverageFrom": [
            "js/**/*.js",
            "!**/node_modules/**",
            "!**/flow-typed/**"
        ],
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ],
        "timers": "fake"
    }
}
